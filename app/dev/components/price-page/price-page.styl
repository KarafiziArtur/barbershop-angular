.pages
  .index-content
    background url('../img/bg-content.jpg') repeat

    margin 0
    padding: 45px 0
    padding-bottom 75px
    .content-title
      margin-bottom: 55px
      h1
        margin: 0
        margin-bottom: 20px
        padding: 0
        font-size: 30px
        line-height: 42px
      .breadcrumbs
        margin: 0
        padding: 0
        list-style none
        li
          position: relative
          display: inline
          padding-right: 40px
          a
            color #000
            text-decoration none
            &:hover
              text-decoration: underline
          &.current
            color #aba9a7
            &:after
              display: none
          &:after
            content ''
            position: absolute
            top: 5px
            right: 14px
            width: 8px
            height: 8px
            background-color: #000
            transform rotate(45deg)

    .inner-content
      .inner-coloums > div
        padding: 0
        width: 460px
      .content-left *:first-child,
      .content-right *:first-child
        margin-top: 0
      .content-left *:last-child,
      .content-right *:last-child
        margin-bottom: 0
      h2
        margin-top: 60px
        margin-bottom: 30px
        font-size: 24px
        line-height: 30px
        & + h3
          margin-top: 30px
      .big-heading
        position: relative
        margin-top: 55px
        margin-bottom: 65px
        text-align: center
        &:after
          content ''
          position: absolute
          z-index 1
          display: block
          top 50%
          left: 0
          width: 100%
          height: 2px
          background: #000
        h2
          position: relative
          z-index 2
          display: inline-block
          margin: 0
          padding: 0 25px
          font-size: 48px
          line-height: 48px
          background #f8f5f2 url('../img/bg-content.jpg') repeat
      .custom-list-1
        margin: 14px 0
        padding: 0
        list-style none
        li
          position: relative
          margin-bottom: 15px
          padding-left: 20px
          &:before
            content ''
            position: absolute
            top 8px
            left: 0
            width: 8px
            height: 8px
            background-color: #000
            transform rotate(45deg)
      .prices-table
        width: 100%
        td
          50%
          &:last-child
            text-align: center
      p
        margin: 14px 0
      table
        border-collapse collapse
        td
          padding: 10px 15px
          border 2px solid #000