.shop-page
  .content-left.filter-container
    width: 220px
    padding: 0
  .content-right.goods
    width: 700px
    .goods-container
      margin-bottom: 10px
  .filter-container
    fieldset
      margin: 0
      margin-bottom: 45px
      padding: 0
      border: none
    legend
      margin-bottom: 25px
      font-size: 24px
      line-height: 34px
    ul
      margin 0
      padding-left: 0
      list-style: none
      label
        position: relative
        display: block
        padding-left: 45px
        width: 125px
        line-height: 18px
        cursor: pointer
      li:not(:last-child)
        margin-bottom: 20px
    input
      display: none
    .manufacturers
      label
        &:before
          content: ""
          position: absolute
          top: -1px
          left: 0
          width: 16px
          height: 16px
          border: 2px solid #000
      input[type='checkbox']:checked + label:after
        position: absolute
        top 0
        left 3px
        font-family: 'barbershop-icons'
        font-weight: 300
        content '\e807'
        display: block
        width: 12px
        height: 12px
    .goods-groups
      label
        &:before
          content: ""
          position: absolute
          top: -1px
          left: 0
          width: 16px
          height: 16px
          border: 2px solid #000
          border-radius: 50%
      input[type='radio']:checked + label:after
        content: ""
        position: absolute
        left: 6px
        top 5px
        width: 8px
        height: 8px
        background: #000
        border-radius: 50%

// Products
  .goods
    .goods-container
      .goods-item
        display: inline-block
        margin-right: 20px
        margin-bottom: 20px
        padding-bottom: 15px
        width: 220px
        vertical-align: top
        font-size: 14px
        box-shadow: 0 0 20px rgba(0,0,0,.2)
        background-color: #fff
        &:nth-child(3n+3)
          margin-right: 0
        h2
          margin: 10px 15px
          font-size: 14px
          line-height: 24px
          a
            color #000
            text-decoration: none
          span
            display: block
            text-transform capitalize
      .purchase-block
        margin-left: 15px
        margin-right: 15px
        text-align: center
        background-color: #e5e5e5
        span
          display: inline-block
          padding-top: 10px
          padding-bottom: 10px
        button
          float: right
      img
        width: 220px
        height: 165px
  .goods-pagination
    margin-bottom: 45px
    button
      font-size: 14px
      margin-right: 7px
      &.pagination-current
        cursor default
        background-color #fff
        color #000