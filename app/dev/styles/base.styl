body
  // Positioning
  // Box-model
  min-width 960px
  overflow-x hidden
  // Typography
  font-size 14px
  line-height 24px
  font-family font-family
  font-weight 700
  color #fff
  // Visual
  background-attachment: fixed
  text-transform uppercase
  transition all .4s
  // Misc
  +below(1024px)
    overflow-x visible
  &.main
    background-color #000
    background-image: url('../img/main-bg.jpg')
    background-repeat: no-repeat
    background-position: center top
  &.pages
    background-color #f8f5f2
    background-image: url('../img/bg-content.jpg')
    background-repeat: repeat

img
  max-width 100%
  height auto

.container
  center(940px)
  padding 0 10px

.clearfix
  cf()

.btn
  display: inline-block
  padding: 10px 33px
  margin-right: 16px

  font-family font-family
  font-weight: 700
  font-size: 14px
  line-height: 24px
  text-transform: uppercase
  text-decoration: none
  color #fff
  vertical-align: top
  text-align: center

  background-color #000
  border: 0
  outline: 0
  cursor: pointer

  transition background-color .3s

  &:hover,
  &:active
    background-color: #663d15

  &.disabled,
  &:disabled
    cursor: default
    opacity: .5

  &.disabled:hover,
  &:disabled:hover
    background-color #000

.modal-overlay
  position: fixed
  top: 0
  left: 0
  z-index: 10
  display: none

  width: 100%
  height: 100%

  background: rgba(0,0,0,.5)

@import "animated-pages.styl"